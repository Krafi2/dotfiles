unit {
	name: Helix
	desc: Helix package and configuration
	topic: devel
}

packages(provider: zypper) [
	helix
	helix-runtime
]

files(target: ~/.config/helix) [
	config.toml
]

# The helix-runtime package is currently a bit broken and cannot find the runtime
install {{
	ln -s /usr/lib64/helix/runtime ~/.config/helix/runtime
}}